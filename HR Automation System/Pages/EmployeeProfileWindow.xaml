<Window x:Class="HR_Automation_System.Pages.EmployeeProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Automation_System.Pages"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Личная карточка сотрудника"
        Height="500"
        Width="800"
        FontFamily="/HR Automation System;component/Fonts/#Panton">
    <Grid>
        <TabControl Style="{StaticResource TabControlDefaultStyle}">
            <TabItem
                IsSelected="True"
                Header="Основное"
                Height="30"
                Width="199"
                Style="{StaticResource TabItemDefaultStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="89*" />
                        <ColumnDefinition Width="285*" />
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

                    <StackPanel
                        Orientation="Vertical"
                        Grid.Column="1"
                        Grid.Row="1">
                        <Image 
                            x:Name="AvatarImage"
                            Height="150"
                            Width="150"/>
                        <Button
                            Width="150"
                            Height="25"
                            FontFamily="/HR Automation System;component/Fonts/#Segoe UI Symbol, /HR Automation System;component/Fonts/#Panton"
                            Content="&#xE109; Загрузить"
                            Style="{StaticResource ButtonDefaultStyle}"/>
                    </StackPanel>
                    
                </Grid>
            </TabItem>
            <TabItem                
                Header="Личные данные"
                Height="30"
                Width="199"
                Style="{StaticResource TabItemDefaultStyle}">
                
            </TabItem>
            <TabItem                
                Header="Профессия"
                Height="30"
                Width="198"
                Style="{StaticResource TabItemDefaultStyle}">

            </TabItem>
            <TabItem                
                Header="Отпуски"
                Height="30"
                Width="198"
                Style="{StaticResource TabItemDefaultStyle}">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
