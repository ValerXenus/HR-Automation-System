<Page x:Class="HR_Automation_System.Pages.EmployeesListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR_Automation_System.Pages"
      mc:Ignorable="d"      
      d:DesignHeight="480"
      d:DesignWidth="905"
      FontFamily="/HR Automation System;component/Fonts/#Panton">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Line
            Grid.Row="0"
            Height="2"
            Fill="Black"/>
        <Rectangle
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Fill="WhiteSmoke" />
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Grid.Row="0">
            <Button
                Width="100"
                Height="25"
                FontSize="13"
                Content="&#xE1E2;  Добавить"
                Style="{StaticResource ButtonDefaultStyle}"
                Margin="0,0,5,0"
                Click="AddNewEmployee_Click"
                FontFamily="/HR Automation System;component/Fonts/#Segoe UI Symbol, /HR Automation System;component/Fonts/#Panton"/>
            <Button
                Width="25"
                Height="25"
                FontSize="13"
                Content="&#xE16E;"
                Margin="0,0,5,0"
                FontFamily="/HR Automation System;component/Fonts/#Segoe UI Symbol"
                Style="{StaticResource ButtonWhiteStyle}"/>
        </StackPanel>
        
        <DataGrid
            x:Name="EmployeesList"
            Grid.Row="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ColumnHeaderHeight="40"
            VerticalGridLinesBrush="Transparent"
            HorizontalGridLinesBrush="LightGray"
            SelectionMode="Single"
            CanUserResizeRows="False"
            Background="White"
            BorderBrush="Gray"
            RowHeight="45"            
            AutoGenerateColumns="False"
            FontSize="13">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridCell}">
                                <Grid Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn                    
                    Header="Id"     
                    Visibility="Collapsed"
                    Binding="{Binding EmployeeId}"                    
                    Width="300"/>
                <DataGridTextColumn           
                    Header="    Сотрудник"                    
                    Binding="{Binding EmployeeName}"                    
                    Width="240"/>
                <DataGridTextColumn 
                    Header="Должность"                    
                    Binding="{Binding Position}"
                    Width="150"/>
                <DataGridTextColumn                    
                    Header="Отдел"                    
                    Binding="{Binding Department}"
                    Width="250"/>
                <DataGridTemplateColumn CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="30"
                                    Cursor="Hand"
                                    Height="30"
                                    Content="&#xE104;"
                                    Background="White"
                                    FontFamily="/HR Automation System;component/Fonts/#Segoe UI Symbol" ToolTip="Просмотр личной карточки сотрудника/редактирование"
                                    BorderBrush="{x:Null}"
                                    Foreground="Black"
                                    FontSize="17"
                                    Click="EditEmployee_Click"
                                    Style="{DynamicResource ButtonWhiteStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
